{{#form-key-capture submit="submit" cancel="cancel"}}

  <h4>Edit Book</h4>

    <div class="form-group">
      <label>Title</label>
      {{input type="text" placeholder="title" class="form-control" valueBinding="title"}}
    </div>

    <div class="form-group">
      <label>Author</label>
      {{input type="text" placeholder="author" class="form-control" valueBinding="author"}}
    </div>

    <button {{action submit}} class="btn btn-primary"> Submit </button>

    <button {{action cancel}} class="btn btn-primary"> Cancel </button>

{{/form-key-capture}}
